@startuml frame_2
!pragma resolution 300

' Enable SVG animation
!pragma svganimated true

' Enable arrow animation using 


skinparam titleBorderRound 15
skinparam titleBorderThickness 2
skinparam titleBorderColor red
skinparam titleBackgroundColor white
skinparam FontName "Verdana" 

' Arrow styling for animation effect
skinparam ArrowColor DeepSkyBlue
skinparam ArrowThickness 2

title Data Migration Process Flow \n CAPS To PAT Migration Process

actor User
participant "Main Program" as Main
participant "Helper" as Helper
participant "ServiceProvider" as ServiceProvider

User -[dotted,#blue,bold,thickness=2]-> Main : Start with args
activate Main

Main -[#blue,bold,dashed]-> Main : Create ParameterInfo
alt ShowHelp is true
    Main -[dotted,#green,bold,thickness=2]-> User : Return Success
end

Main -[dotted,#blue,bold,thickness=2]-> ServiceProvider : AppSetup(IsBenchmark, EnvironmentName, OnlyPreRenewal)
activate ServiceProvider

Main -[#blue,bold,dashed]-> Main : Set executionGuid
Main -[#blue,bold,dashed]-> Main : Get FullRunLogger
Main -[dotted,#blue,bold,thickness=2]-> ServiceProvider : Get Helper service
activate Helper

Main -[dotted,#orange,bold,thickness=2]-> Helper : Step_NotifyBenchmarkIfApplicable
Main -[dotted,#orange,bold,thickness=2]-> Helper : Step_NotifyEnvironment
Main -[dotted,#orange,bold,thickness=2]-> Helper : Step_LogAzureConnectionDetails

alt Getpolicymigrationreport is true
    Main -[dotted,#orange,bold,thickness=2]-> Helper : Step_CreatePolicyMigrationReport
    Main -[dotted,#orange,bold,thickness=2]-> Helper : Step_CreateHupeMigrationWeeklyReport
    Main -[dotted,#green,bold,thickness=2]-> User : Return Success
end

Main -[dotted,#orange,bold,thickness=2]-> Helper : Step_PerformETLProcess
Helper -[#purple,bold,dashed]-> Main : Return ETL data
Main -[#blue,bold,dashed]-> Main : Store AgencyPoliciesFromCaps

Main -[dotted,#orange,bold,thickness=2]-> Helper : Step_NotifyFullExtractionReport
Main -[dotted,#orange,bold,thickness=2]-> Helper : Step_CreateFullExtractionReportByAgencyOrPolicyNumbers (async)

alt ETLDone is true
    Main -[dotted,#orange,bold,thickness=2]-> Helper : Step_GetPoliciesToETL
    activate Helper
    Helper -[#purple,bold,dashed]-> Main : Return etlPolicies
    deactivate Helper
    
    Main -[dotted,#orange,bold,thickness=2]-> Helper : Step_RunValidation_WhenParameterIsOn
    Main -[dotted,#orange,bold,thickness=2]-> Helper : Step_CheckPoliciesAgainstTheAllowedSet
    Helper -[#purple,bold,dashed]-> Main : Return filtered etlPolicies
    Main -[dotted,#orange,bold,thickness=2]-> Helper : Step_PassPrerenewalFlagForAllConsumersSoThatTheyAreAware
    
    alt RunIssuesToResolveValidation is true
        Main -[dotted,#orange,bold,thickness=2]-> Helper : Step_RunIssuesToResolveValidation
        Main -[dotted,#green,bold,thickness=2]-> User : Return Success
    end
      Main -[dotted,#orange,bold,thickness=2]-> Helper : Step_RunIssuesToResolveValidation_WhenFlagsAllow
    Main -[dotted,#orange,bold,thickness=2]-> Helper : Step_CompareNumberOfPoliciesTransactionCountsByLOB
    Main -[dotted,#orange,bold,thickness=2]-> Helper : Step_CreateExecutionStatus_WhenAllowed
    Main -[dotted,#orange,bold,thickness=2]-> Helper : Step_LogFinalSuccessMessage
else ETLDone is false
    Main -[dotted,#red,bold,thickness=2]-> Helper : Step_LogErrorForPreRenewalPolicies
end

Main -[dotted,#orange,bold,thickness=2]-> Helper : Step_DeleteTemporaryFilesFromMigrationProcess
Main -[dotted,#orange,bold,thickness=2]-> Helper : Step_ProcessDailyValidationRun
Main -[dotted,#orange,bold,thickness=2]-> Helper : Await step_completeFullExtractionReportTask

deactivate Helper
deactivate ServiceProvider

Main -[dotted,#green,bold,thickness=2]-> User : Return Success

note right of Main
  Exception handling:
  If any exception occurs during the process,
  it will be published via ExceptionPublisher,
  logged, and Error exit code will be returned
end note

@enduml
